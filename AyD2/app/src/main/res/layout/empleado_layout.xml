<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nombre"
            android:text="NOMBRE"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_apellido"
            android:text="APELLIDO"
            android:layout_centerHorizontal="true"
            android:layout_gravity ="center_vertical|right"
            android:layout_below="@+id/text_nombre"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_dpi"
            android:text="DPI"
            android:layout_centerHorizontal="true"
            android:layout_gravity ="center_vertical|right"
            android:layout_below="@+id/text_apellido"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_puesto"
            android:text="PUESTO"
            android:layout_centerHorizontal="true"
            android:layout_gravity ="center_vertical|right"
            android:layout_below="@+id/text_dpi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_salario"
            android:text="SALARIO"
            android:layout_centerHorizontal="true"
            android:layout_gravity ="center_vertical|right"
            android:layout_below="@+id/text_puesto"
            />


        <Button
            android:id = "@+id/btn_eliminar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="ELIMINAR"
            android:textSize="24dp"
            android:layout_below="@+id/text_salario"
            />

        <Button
            android:id = "@+id/btn_editar"
            android:layout_below = "@+id/btn_eliminar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="EDITAR"
            android:textSize="24dp"

            />


    </RelativeLayout>

</android.support.v7.widget.CardView>